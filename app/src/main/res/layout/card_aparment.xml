<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:paddingTop="2dp">

            <ImageView
                android:id="@+id/imgMain"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txtFurnished"
                android:layout_width="84dp"
                android:layout_height="38dp"
                android:layout_alignBaseline="@+id/txtSqMeters"
                android:layout_alignBottom="@+id/txtSqMeters"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#97000000"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_below="@+id/imgMain"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp" />

            <TextView
                android:id="@+id/txtSqMeters"
                android:layout_width="84dp"
                android:layout_height="38dp"
                android:layout_above="@+id/txtRooms"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="14dp"
                android:background="#97000000"
                android:textColor="#ffffffff"
                android:textSize="20dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/txtRooms"
                android:layout_width="84dp"
                android:layout_height="38dp"
                android:background="#97000000"
                android:textColor="#ffffffff"
                android:textSize="20dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:layout_alignBaseline="@+id/txtPrice"
                android:layout_alignBottom="@+id/txtPrice"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="84dp"
                android:layout_height="38dp"
                android:layout_alignBottom="@+id/imgMain"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="23dp"
                android:background="#97000000"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtPrice"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/txtPrice"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="11dp"
                android:layout_marginRight="11dp"
                android:text="TextView" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>