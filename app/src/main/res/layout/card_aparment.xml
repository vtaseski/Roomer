<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:paddingTop="2dp">

            <ImageView
                android:id="@+id/imgMain"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:layout_above="@+id/txtRooms"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="14dp"
                android:background="#7F000000"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFurnished"
                android:layout_width="140dp"
                android:layout_height="38dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#9fffffff"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imgMain"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtTitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="28dp"
                android:maxLines="1"
                android:textColor="@color/cardview_dark_background"
                android:textSize="17dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="253dp"
                android:background="#000000" />
            <TextView
                android:id="@+id/txtSqMeters"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:background="#7F000000"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:layout_alignBaseline="@+id/txtCategory"
                android:layout_alignBottom="@+id/txtCategory"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtRooms"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:layout_alignBaseline="@+id/txtPrice"
                android:layout_alignBottom="@+id/txtPrice"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#7F000000"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="90dp"
                android:layout_height="38dp"
                android:layout_alignBottom="@+id/imgMain"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="23dp"
                android:background="#7F000000"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>